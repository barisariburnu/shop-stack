DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/db
BETTER_AUTH_SECRET=replace-with-strong-secret
VITE_BETTER_AUTH_URL=http://localhost:3000

NODE_ENV=development

# Production URL
BETTER_AUTH_URL=https://your-production-domain.com

# Social Auth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email
SMTP_PASSWORD=your-password

# Server Configuration
PORT=3000

# Static Asset Preloading Configuration
# Maximum file size in bytes to preload into memory (default: 5242880 / 5MB)
ASSET_PRELOAD_MAX_SIZE=5242880
# Comma-separated list of glob patterns for files to include
ASSET_PRELOAD_INCLUDE_PATTERNS="*.js,*.css,*.woff2"
# Comma-separated list of glob patterns for files to exclude
ASSET_PRELOAD_EXCLUDE_PATTERNS="*.map,*.txt"
# Enable detailed logging of loaded and skipped files (default: false)
ASSET_PRELOAD_VERBOSE_LOGGING=false
# Enable ETag generation for preloaded assets (default: true)
ASSET_PRELOAD_ENABLE_ETAG=true
# Enable Gzip compression for eligible assets (default: true)
ASSET_PRELOAD_ENABLE_GZIP=true
# Minimum file size in bytes required for Gzip compression (default: 1024 / 1KB)
ASSET_PRELOAD_GZIP_MIN_SIZE=1024
# Comma-separated list of MIME types eligible for Gzip compression
ASSET_PRELOAD_GZIP_MIME_TYPES="text/,application/javascript,application/json,application/xml,image/svg+xml"